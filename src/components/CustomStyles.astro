---
// Station 33 Custom Fonts - Cormorant Garamond for headings, Manrope for body
---

<style is:inline>
  /* Import Google Fonts */
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;600;700&family=Manrope:wght@300;400;500;600;700;800&display=swap');

  :root {
    /* Station 33 Fonts */
    --aw-font-sans: 'Manrope', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --aw-font-serif: 'Cormorant Garamond', Georgia, serif;
    --aw-font-heading: 'Cormorant Garamond', Georgia, serif;

    /* Station 33 Brand Colors */
    --aw-color-primary: rgb(255 107 53); /* Orange #FF6B35 */
    --aw-color-secondary: rgb(255 133 85); /* Coral #FF8555 */
    --aw-color-accent: rgb(255 179 71); /* Cream #FFB347 */

    /* Station 33 Extended Palette */
    --station-orange: rgb(255 107 53);
    --station-coral: rgb(255 133 85);
    --station-cream: rgb(255 179 71);
    --station-charcoal: rgb(47 47 47);
    --station-brick: rgb(166 75 42);
    --station-beige: rgb(244 232 216);
    --station-green: rgb(58 95 90);
    --station-blue: rgb(91 167 196);
    --station-gold: rgb(244 185 66);

    /* Text Colors - Light Mode */
    --aw-color-text-heading: rgb(26 26 26);
    --aw-color-text-default: rgb(47 47 47);
    --aw-color-text-muted: rgb(168 168 168);
    --aw-color-bg-page: rgb(250 250 250);

    /* Dark Mode Background */
    --aw-color-bg-page-dark: rgb(10 10 10);

    ::selection {
      background-color: rgb(255 179 71 / 30%);
      color: rgb(47 47 47);
    }
  }

  .dark {
    /* Station 33 Fonts (same in dark mode) */
    --aw-font-sans: 'Manrope', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --aw-font-serif: 'Cormorant Garamond', Georgia, serif;
    --aw-font-heading: 'Cormorant Garamond', Georgia, serif;

    /* Colors remain same in dark mode */
    --aw-color-primary: rgb(255 107 53);
    --aw-color-secondary: rgb(255 133 85);
    --aw-color-accent: rgb(255 179 71);

    /* Text Colors - Dark Mode */
    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(232 232 232);
    --aw-color-text-muted: rgb(184 184 184);
    --aw-color-bg-page: rgb(10 10 10);

    ::selection {
      background-color: rgb(255 107 53 / 40%);
      color: rgb(255 255 255);
    }
  }

  /* Station 33 Custom Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes badgePulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgb(255 107 53 / 40%);
    }
    50% {
      box-shadow: 0 0 20px 8px rgb(255 107 53 / 0%);
    }
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Station 33 gradient text utility */
  .gradient-text {
    background: linear-gradient(135deg, rgb(255 255 255) 0%, rgb(255 179 71) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Dark mode gradient adjustments */
  .dark .gradient-text {
    background: linear-gradient(135deg, rgb(255 255 255) 0%, rgb(255 179 71) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
