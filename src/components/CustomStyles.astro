---
// Station 33 Custom Fonts - Cormorant Garamond for headings, Manrope for body
---

<style is:inline>
  /* Import Google Fonts */
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;600;700&family=Manrope:wght@300;400;500;600;700;800&display=swap');

  :root {
    /* Station 33 Fonts */
    --aw-font-sans: 'Manrope', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --aw-font-serif: 'Cormorant Garamond', Georgia, serif;
    --aw-font-heading: 'Cormorant Garamond', Georgia, serif;

    /* Station 33 Brand Colors */
    --aw-color-primary: rgb(194 69 56); /* Brick Red #C24538 */
    --aw-color-secondary: rgb(216 90 58); /* Burnt Orange #D85A3A */
    --aw-color-accent: rgb(122 139 79); /* Olive Green #7A8B4F */

    /* Station 33 Extended Palette */
    --station-brick-red: rgb(194 69 56); /* #C24538 */
    --station-burnt-orange: rgb(216 90 58); /* #D85A3A */
    --station-terracotta: rgb(230 123 77); /* #E67B4D */
    --station-olive-green: rgb(122 139 79); /* #7A8B4F */
    --station-charcoal: rgb(74 74 74); /* #4A4A4A */
    --station-dark-gray: rgb(92 92 92); /* #5C5C5C */
    --station-cream: rgb(232 213 196); /* #E8D5C4 */
    --station-light-beige: rgb(244 232 216); /* #F4E8D8 */
    --station-teal: rgb(74 155 159); /* #4A9B9F */
    --station-warm-gold: rgb(244 185 66); /* #F4B942 */
    --station-dark-green: rgb(44 74 71); /* #2C4A47 */

    /* Text Colors - Light Mode */
    --aw-color-text-heading: rgb(26 26 26);
    --aw-color-text-default: rgb(74 74 74); /* Updated to Charcoal Gray */
    --aw-color-text-muted: rgb(92 92 92); /* Updated to Dark Gray */
    --aw-color-bg-page: rgb(244 232 216); /* Updated to Light Beige */

    /* Dark Mode Background */
    --aw-color-bg-page-dark: rgb(10 10 10);

    ::selection {
      background-color: rgb(194 69 56 / 30%); /* Brick Red selection */
      color: rgb(26 26 26);
    }
  }

  .dark {
    /* Station 33 Fonts (same in dark mode) */
    --aw-font-sans: 'Manrope', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --aw-font-serif: 'Cormorant Garamond', Georgia, serif;
    --aw-font-heading: 'Cormorant Garamond', Georgia, serif;

    /* Colors remain same in dark mode */
    --aw-color-primary: rgb(194 69 56); /* Brick Red #C24538 */
    --aw-color-secondary: rgb(216 90 58); /* Burnt Orange #D85A3A */
    --aw-color-accent: rgb(122 139 79); /* Olive Green #7A8B4F */

    /* Text Colors - Dark Mode */
    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(232 232 232);
    --aw-color-text-muted: rgb(184 184 184);
    --aw-color-bg-page: rgb(10 10 10);

    ::selection {
      background-color: rgb(194 69 56 / 40%); /* Brick Red selection */
      color: rgb(255 255 255);
    }
  }

  /* Station 33 Custom Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes badgePulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgb(194 69 56 / 40%); /* Brick Red */
    }
    50% {
      box-shadow: 0 0 20px 8px rgb(194 69 56 / 0%);
    }
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Station 33 gradient text utility */
  .gradient-text {
    background: linear-gradient(135deg, rgb(194 69 56) 0%, rgb(244 185 66) 100%); /* Brick Red to Warm Gold */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Dark mode gradient adjustments */
  .dark .gradient-text {
    background: linear-gradient(135deg, rgb(216 90 58) 0%, rgb(244 185 66) 100%); /* Burnt Orange to Warm Gold */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
