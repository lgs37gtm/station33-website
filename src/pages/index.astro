---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import { Image } from 'astro:assets';
import aerialImage from '~/assets/images/brochure/2.jpg';

// Import brochure images for features
import trolleyBuildingImage from '~/assets/images/brochure/5.jpg';
import townhomesImage from '~/assets/images/brochure/15.jpg';
import hotelImage from '~/assets/images/brochure/10.jpg';
import diningImage from '~/assets/images/brochure/26.jpg';
import pavilionImage from '~/assets/images/brochure/18.jpg';

// Import images for amenities section
import courtyardPoolImage from '~/assets/images/brochure/20.jpg';
import towerArchwayImage from '~/assets/images/brochure/25.jpg';

// Import Claudia's photos
import claudiaPullenImage from '~/assets/images/claudia-pullen-2.jpg';
import cancerInstituteImage from '~/assets/images/pullen-cancer-institute.jpg';

const metadata = {
  title: 'Station 33 Chattanooga | Disney Imagineering Mixed-Use Development',
  description: 'A transformative mixed-use destination in downtown Chattanooga designed by Disney Imagineering. Featuring 250,000 SF of commercial space, 47 luxury residences, boutique hotel, and dining on the Riverwalk.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section ******************* -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden -mt-[76px]">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <Image
        src={aerialImage}
        alt="Aerial view of Station 33 development"
        class="w-full h-full object-cover"
        loading="eager"
        widths={[400, 768, 1024, 1536, 2048]}
        sizes="100vw"
      />
      <!-- Dark Overlay -->
      <div class="absolute inset-0 bg-black/40"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 pt-[76px] py-12 md:py-20">
      <div class="text-center max-w-5xl mx-auto">
        <!-- Disney Imagineering Badge -->
        <span class="inline-block mb-6 px-4 py-2 text-sm font-semibold tracking-wider uppercase rounded-full bg-primary/20 text-white border border-primary/50 backdrop-blur-sm animate-[badgePulse_2s_ease-in-out_infinite]">
          ✨ A Disney Imagineering Partnership
        </span>

        <!-- Main Heading -->
        <h1 class="font-heading text-6xl md:text-7xl lg:text-8xl font-semibold leading-tight tracking-tight mb-6 text-white drop-shadow-2xl">
          Where Chattanooga<br />Comes Together
        </h1>

        <!-- Subtitle -->
        <p class="text-xl md:text-2xl text-white/90 leading-relaxed mb-8 max-w-3xl mx-auto drop-shadow-lg">
          A transformative mixed-use destination combining historic charm with modern living.
          Experience 250,000 SF of commercial space, 47 luxury residences, and a boutique hotel—all designed by Disney Imagineering on Chattanooga's iconic Riverwalk.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#features"
            class="inline-flex items-center justify-center px-8 py-3 text-base font-semibold rounded-lg bg-primary hover:bg-primary/90 text-white transition-all duration-200 shadow-xl hover:shadow-2xl hover:scale-105"
          >
            Explore Station 33
          </a>
          <a
            href="/contact#tour"
            class="inline-flex items-center justify-center gap-2 px-8 py-3 text-base font-semibold rounded-lg bg-white/10 backdrop-blur-md hover:bg-white/20 text-white border border-white/30 transition-all duration-200"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Schedule Tour
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
      <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Stats Section ******************* -->
  <Stats
    title="Station 33 By The Numbers"
    subtitle="A $100M+ investment transforming downtown Chattanooga"
    stats={[
      { amount: '8', title: 'Buildings Across Campus', icon: 'tabler:building-skyscraper' },
      { amount: '250K+', title: 'SF Total Development', icon: 'tabler:building' },
      { amount: '47', title: 'Residential Units', icon: 'tabler:home' },
      { amount: '63', title: 'Boutique Hotel Rooms', icon: 'tabler:bed' },
      { amount: '400', title: 'Parking Spots', icon: 'tabler:car' },
      { amount: '$100M+', title: 'Investment', icon: 'tabler:trophy' },
    ]}
  />

  <!-- Founder's Story Section ******************* -->
  <section class="py-16 md:py-20 lg:py-24 bg-gradient-to-br from-slate-50 via-white to-slate-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Dual Image Layout - Elegant Composition -->
        <div class="relative flex flex-col gap-6">
          <!-- Claudia's Photo - Circular Design -->
          <div class="relative flex justify-center lg:justify-start">
            <div class="relative w-80 h-80 md:w-96 md:h-96">
              <!-- Circular photo container -->
              <div class="w-full h-full rounded-full overflow-hidden shadow-2xl ring-8 ring-white dark:ring-slate-800">
                <Image
                  src={claudiaPullenImage}
                  alt="Claudia Pullen with her dog, Founder of Station 33"
                  class="w-full h-full object-cover"
                  widths={[400, 600, 800]}
                  sizes="(max-width: 768px) 320px, 384px"
                />
              </div>
              <!-- Decorative circular accent -->
              <div class="absolute -z-10 -bottom-4 -right-4 w-full h-full rounded-full border-4 border-primary/20"></div>
              <div class="absolute -z-20 top-4 -left-4 w-full h-full rounded-full bg-gradient-to-br from-primary/10 to-accent/10"></div>
            </div>
          </div>

          <!-- Cancer Institute Image - Elegant Card -->
          <div class="relative mx-auto lg:mx-0 w-full max-w-md">
            <div class="relative overflow-hidden rounded-2xl shadow-xl">
              <Image
                src={cancerInstituteImage}
                alt="Pullen Cancer Center - Legacy of Innovation"
                class="w-full h-48 object-cover"
                widths={[400, 600, 800]}
                sizes="(max-width: 768px) 100vw, 400px"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-primary/60 via-primary/20 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <p class="text-white text-sm font-semibold">Pullen Cancer Center</p>
                <p class="text-white/80 text-xs">A legacy of healthcare innovation</p>
              </div>
            </div>
            <!-- Decorative accent -->
            <div class="absolute -z-10 -bottom-2 -right-2 w-full h-full rounded-2xl bg-primary/10"></div>
          </div>
        </div>

        <!-- Story Content -->
        <div class="space-y-6">
          <div>
            <span class="inline-block mb-3 px-4 py-1.5 text-sm font-semibold tracking-wider uppercase rounded-full bg-primary/10 text-primary border border-primary/20">
              Founder's Vision
            </span>
            <h2 class="text-4xl md:text-5xl font-bold tracking-tight mb-4 font-heading">
              From Canine Cancer Research<br />to Urban Renaissance
            </h2>
          </div>

          <div class="space-y-4 text-lg text-muted dark:text-slate-300 leading-relaxed">
            <p>
              Claudia Pullen's journey to Station 33 is anything but conventional. After pioneering groundbreaking work in canine cancer research and founding a specialized treatment institute, Claudia saw an opportunity to channel that same innovative spirit into urban development.
            </p>

            <p>
              Where others saw abandoned trolley buildings and underutilized riverfront space, she envisioned a community—a place where people and their pets could thrive together, where historic preservation meets forward-thinking design, and where gathering spaces are as important as living spaces.
            </p>

            <p class="font-semibold text-slate-900 dark:text-white">
              "I didn't want to create just another massive corporate development. I wanted something boutique, something intimate—a place with soul."
            </p>

            <p>
              That vision led her to an unexpected partnership: Disney Imagineering. The same creative minds behind the world's most immersive experiences would help bring Station 33 to life. It wasn't about theme parks—it was about their unmatched ability to create places where every detail tells a story, where spaces connect people, and where communities are built to endure.
            </p>

            <p>
              Today, Station 33 stands as a testament to what's possible when purpose meets passion. It's pet-friendly because Claudia knows the healing power of the human-animal bond. It honors Chattanooga's trolley heritage because she believes in preserving what makes this city special. And it's designed at a human scale because the best communities aren't built—they're nurtured.
            </p>
          </div>

          <!-- Key Principles -->
          <div class="grid sm:grid-cols-2 gap-4 pt-6">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-slate-900 dark:text-white mb-1">Pet-Friendly Living</h4>
                <p class="text-sm text-muted">Community designed with furry family members in mind</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-slate-900 dark:text-white mb-1">Historic Preservation</h4>
                <p class="text-sm text-muted">Honoring Chattanooga's trolley heritage with modern purpose</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-slate-900 dark:text-white mb-1">Community Focus</h4>
                <p class="text-sm text-muted">Boutique scale that prioritizes people over profit</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-slate-900 dark:text-white mb-1">Visionary Partnership</h4>
                <p class="text-sm text-muted">Disney Imagineering brings world-class placemaking</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Disney Imagineering Section ******************* -->
  <Content
    id="disney"
    classes={{ title: 'font-bold' }}
    title="The Disney Imagineering Partnership"
    subtitle="When Claudia chose Disney Imagineering as her design partner, it wasn't about celebrity appeal—it was about finding collaborators who understood that great places aren't just designed, they're imagined."
    items={[
      {
        title: 'Experiential Design',
        description: 'Every space tells a story, from the restored Trolley Building to modern plaza areas designed for community gathering. Disney Imagineering\'s storytelling expertise creates layers of meaning in every corner.',
        icon: 'tabler:sparkles',
      },
      {
        title: 'Historic Preservation',
        description: 'Honoring Chattanooga\'s trolley heritage while creating a vibrant, forward-thinking community. The past and future coexist in perfect harmony.',
        icon: 'tabler:building-monument',
      },
      {
        title: 'Riverwalk Integration',
        description: 'Seamless connection to 13+ miles of walking and biking paths along the Tennessee River. Station 33 becomes part of Chattanooga\'s natural flow.',
        icon: 'tabler:ripple',
      },
      {
        title: 'Human-Scale Placemaking',
        description: 'Disney Imagineering\'s magic isn\'t in size—it\'s in the details. They helped Claudia maintain her boutique vision while delivering world-class design.',
        icon: 'tabler:users',
      },
    ]}
  >
    <Fragment slot="content">
      <div class="space-y-4 text-base text-muted">
        <p>
          Disney Imagineering brings decades of storytelling expertise to create spaces that connect, inspire, and endure.
          This partnership validates Claudia's vision: that Station 33 could be both intimate and extraordinary.
        </p>
        <p class="font-medium text-slate-900 dark:text-white">
          "We wanted partners who understood that placemaking is about emotion, not just engineering. Disney Imagineering gets that at their core."
        </p>
        <p>
          The result? A development where every architectural detail, every gathering space, and every preserved historic element works together to tell Chattanooga's story—past, present, and future.
        </p>
      </div>
    </Fragment>

    <Fragment slot="bg">
      <!-- Elegant Gradient Waves -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <style>
          @keyframes elegant-wave {
            0%, 100% {
              transform: translateX(-50%) translateY(0) scale(1);
              opacity: 0.08;
            }
            50% {
              transform: translateX(-50%) translateY(-20px) scale(1.05);
              opacity: 0.12;
            }
          }

          @keyframes subtle-drift {
            0% {
              transform: translate(0, 0);
              opacity: 0.06;
            }
            50% {
              transform: translate(30px, -15px);
              opacity: 0.1;
            }
            100% {
              transform: translate(0, 0);
              opacity: 0.06;
            }
          }

          @keyframes sophisticated-float {
            0%, 100% {
              transform: translateY(0);
              opacity: 0.04;
            }
            50% {
              transform: translateY(-40px);
              opacity: 0.08;
            }
          }
        </style>

        <!-- Layered Gradient Waves -->
        <div class="absolute left-1/2 top-0 w-[120%] h-full" style="animation: elegant-wave 20s ease-in-out infinite;">
          <div class="absolute inset-0 bg-gradient-to-br from-primary/8 via-transparent to-transparent rounded-[50%]"></div>
        </div>

        <div class="absolute left-1/2 bottom-0 w-[140%] h-full" style="animation: elegant-wave 25s ease-in-out infinite; animation-delay: -5s;">
          <div class="absolute inset-0 bg-gradient-to-tl from-accent/6 via-transparent to-transparent rounded-[50%]"></div>
        </div>

        <div class="absolute right-0 top-1/4 w-[100%] h-3/4" style="animation: elegant-wave 30s ease-in-out infinite; animation-delay: -10s;">
          <div class="absolute inset-0 bg-gradient-to-bl from-secondary/5 via-transparent to-transparent rounded-[50%]"></div>
        </div>

        <!-- Sophisticated Floating Orbs -->
        <div class="absolute top-[15%] left-[10%] w-96 h-96 bg-primary/6 rounded-full blur-3xl" style="animation: subtle-drift 18s ease-in-out infinite;"></div>
        <div class="absolute bottom-[20%] right-[15%] w-[500px] h-[500px] bg-accent/5 rounded-full blur-3xl" style="animation: subtle-drift 22s ease-in-out infinite; animation-delay: -8s;"></div>
        <div class="absolute top-[50%] right-[30%] w-80 h-80 bg-secondary/4 rounded-full blur-3xl" style="animation: subtle-drift 25s ease-in-out infinite; animation-delay: -15s;"></div>

        <!-- Refined Ambient Glow -->
        <div class="absolute inset-0 bg-gradient-radial from-primary/3 via-transparent to-transparent opacity-40" style="animation: sophisticated-float 35s ease-in-out infinite;"></div>

        <!-- Subtle Light Rays -->
        <div class="absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-transparent via-primary/8 to-transparent" style="animation: sophisticated-float 40s ease-in-out infinite;"></div>
        <div class="absolute top-0 right-1/3 w-px h-full bg-gradient-to-b from-transparent via-accent/6 to-transparent" style="animation: sophisticated-float 45s ease-in-out infinite; animation-delay: -10s;"></div>
      </div>
    </Fragment>
  </Content>

  <!-- Features Section ******************* -->
  <section id="features" class="scroll-mt-16 py-16 md:py-20 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <!-- Section Header -->
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading">
          Eat. Live. Play. Shop. Work.
        </h2>
        <p class="max-w-3xl mx-auto text-xl text-muted dark:text-slate-400">
          Everything you need in one extraordinary place. Station 33 isn't just a development—it's a complete community.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Premium Office Space -->
        <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300">
          <div class="aspect-[4/3] relative">
            <Image
              src={trolleyBuildingImage}
              alt="Trolley Building - Premium Office Space"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              widths={[400, 768, 1024]}
              sizes="(max-width: 768px) 100vw, 50vw"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-2xl font-bold mb-2">Premium Office Space</h3>
            <p class="text-white/90">
              60,000 SF of Grade-A commercial space designed for Chattanooga's most innovative companies. Rooftop access, modern amenities, and a built-in talent magnet.
            </p>
          </div>
        </div>

        <!-- Luxury Living -->
        <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300">
          <div class="aspect-[4/3] relative">
            <Image
              src={townhomesImage}
              alt="Luxury Townhomes - Residential Living"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              widths={[400, 768, 1024]}
              sizes="(max-width: 768px) 100vw, 50vw"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-2xl font-bold mb-2">Luxury Living</h3>
            <p class="text-white/90">
              47 sophisticated apartments and townhomes with Riverwalk views. Pet-friendly living designed for urban professionals who want it all.
            </p>
          </div>
        </div>

        <!-- Boutique Hotel -->
        <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300">
          <div class="aspect-[4/3] relative">
            <Image
              src={hotelImage}
              alt="Boutique Hotel Exterior"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              widths={[400, 768, 1024]}
              sizes="(max-width: 768px) 100vw, 50vw"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-2xl font-bold mb-2">Boutique Hotel</h3>
            <p class="text-white/90">
              63 rooms with rooftop pool and Medusa Lounge. A sanctuary for travelers seeking authentic Chattanooga experiences.
            </p>
          </div>
        </div>

        <!-- Food Hall & Dining -->
        <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300">
          <div class="aspect-[4/3] relative">
            <Image
              src={diningImage}
              alt="Food Hall and Dining Experience"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              widths={[400, 768, 1024]}
              sizes="(max-width: 768px) 100vw, 50vw"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-2xl font-bold mb-2">Food Hall & Dining</h3>
            <p class="text-white/90">
              A curated collection of restaurants and cafes bringing Chattanooga's culinary scene together. From quick bites to leisurely meals.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Amenities Section ******************* -->
  <section class="py-16 md:py-20 lg:py-24 bg-slate-50 dark:bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <!-- Section Header -->
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading">
          World-Class Amenities
        </h2>
        <p class="max-w-3xl mx-auto text-xl text-muted dark:text-slate-400">
          Experience resort-style living with thoughtfully designed spaces that elevate every day. From the serene courtyard pool to sustainable EV charging and beautifully landscaped green spaces, Station 33 offers amenities that enhance your lifestyle.
        </p>
      </div>

      <!-- Amenities Grid -->
      <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
        <!-- Courtyard Pool -->
        <div class="group relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300">
          <div class="aspect-square relative">
            <Image
              src={courtyardPoolImage}
              alt="Courtyard Pool - Resort-Style Amenity"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              widths={[400, 600, 800]}
              sizes="(max-width: 768px) 100vw, 33vw"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
            <h3 class="text-xl font-bold mb-2">Courtyard Pool</h3>
            <p class="text-white/90 text-sm">
              A serene oasis in the heart of downtown. Relax poolside with stunning views and resort-style amenities designed for year-round enjoyment.
            </p>
          </div>
